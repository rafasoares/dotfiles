# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Path to your oh-my-zsh installation.
export ZSH="{{ .chezmoi.homeDir }}/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"

DISABLE_AUTO_UPDATE="true"
DISABLE_UPDATE_PROMPT="true"

ENABLE_CORRECTION="true"

COMPLETION_WAITING_DOTS="true"

plugins=(
  alias-finder
  bundler
  common-aliases
  docker
  docker-compose
  gcloud
  git
  kubectl
  nvm
  rails
  yarn
  z

  {{- if eq .chezmoi.os "darwin" }}
  brew
  macos
  xcode
  {{- end }}

  # Custom plugins (installed from Git into #ZSH_CUSTOM)
  zsh-autosuggestions
  zsh-completions
  zsh-syntax-highlighting
  history-substring-search
)

autoload -U compinit && compinit -i

export NVM_AUTOLOAD=1

source $ZSH/oh-my-zsh.sh

# User configuration

export LANG=en_US.UTF-8

export EDITOR="code -w"

function edit() { "${EDITOR} $@"; }
function edit_settings() { edit "$@"; source "$@"; }

#mkdir and cd
function mkcd() { mkdir -p "$1" && cd "$_" || exit; }

# FileSearch
function f() { find . -iname "*$1*" "${@:2}"; }
function r() { grep "$1" "${@:2}" -R .; }

# Copies .sample/.example files, removing the .sample/.example extension
function unsample() {
  for file in **/?(.)*.@(sample|example); do
    cp "$file" "${file/.(sample|example)/}"
  done
}

devops() {
  who=${1:-tba}
  secrets=$(kubectl get secret --context gapfish dashboard-env -o json | jq -r '.data[".env"]' | base64 -d)
  (
    eval $secrets
    curl -d "{ \"auth_token\": \"${DASHING_AUTH_TOKEN}\", \"text\": \"${who}\" }" \
      https://auth_token:${BASIC_AUTH_TOKEN}@dashboard.k8s.gapfish.com/widgets/devops
  )
}

# Custom aliases
alias zrc="edit_settings ~/.zshrc"
alias omz="edit_settings ~/.oh-my-zsh"
alias pl10k="edit_settings ~/.p10k.zsh"
alias bnfo="bundle info"

for file in $HOME/.config/zsh/*.zsh; do
    source "$file"
done

# Load gcloud completion, if available

if [ -d "$HOME/google-cloud-sdk/ ]; then
  . "$HOME/google-cloud-sdk/path.zsh.inc"
  . "$HOME/google-cloud-sdk/completion.zsh.inc"
fi

export PATH="/usr/local/sbin:$PATH"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"
